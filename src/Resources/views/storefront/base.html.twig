        <script type="text/javascript" src="{{ app.request.server.get('APP_URL') }}:9999/js/swag-pay-pal.js"></script>
    {% else %}
        <script type="text/javascript" src="{{ asset('bundles/swagpaypal/storefront/js/swag-pay-pal.js') }}"></script>
    {% endif %}
{% endblock %}
