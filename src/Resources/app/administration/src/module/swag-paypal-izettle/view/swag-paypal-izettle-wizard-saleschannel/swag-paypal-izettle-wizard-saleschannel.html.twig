{% block swag_paypal_izettle_wizard_saleschannel %}
    <div class="swag-paypal-izettle-wizard-saleschannel">
        <h3>{{ $tc('swag-paypal-izettle.wizard.sales-channel.header') }}</h3>

        {% block swag_paypal_izettle_wizard_saleschannel_select %}
            <sw-entity-single-select v-model="localStorefrontSalesChannelId"
                                     required
                                     entity="sales_channel"
                                     labelProperty="name"
                                     valueProperty="id"
                                     :criteria="storefrontSalesChannelCriteria"
                                     :label="$tc('swag-paypal-izettle.wizard.sales-channel.label')">
            </sw-entity-single-select>
        {% endblock %}

        <div class="subtitle" v-html="$tc('swag-paypal-izettle.wizard.sales-channel.subtitle')"></div>
    </div>
{% endblock %}
