<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Swag\PayPal\IZettle\DataAbstractionLayer\Entity\IZettleSalesChannelMediaDefinition">
            <tag name="shopware.entity.definition" entity="swag_paypal_izettle_sales_channel_media"/>
        </service>

        <service id="Swag\PayPal\IZettle\Api\Service\MediaConverter"/>

        <service id="Swag\PayPal\IZettle\Api\Service\Converter\PresentationConverter"/>

        <service id="Swag\PayPal\IZettle\Resource\ImageResource">
            <argument type="service" id="Swag\PayPal\IZettle\Client\IZettleClientFactory"/>
        </service>

        <service id="Swag\PayPal\IZettle\Sync\ImageSyncer">
            <argument type="service" id="swag_paypal_izettle_sales_channel_media.repository"/>
            <argument type="service" id="sales_channel_domain.repository"/>
            <argument type="service" id="Swag\PayPal\IZettle\Api\Service\MediaConverter"/>
            <argument type="service" id="Swag\PayPal\IZettle\Resource\ImageResource"/>
            <argument type="service" id="Swag\PayPal\IZettle\Run\Logger"/>
        </service>

        <service id="Swag\PayPal\IZettle\Command\IZettleImageSyncCommand">
            <argument type="service" id="sales_channel.repository"/>
            <argument type="service" id="Swag\PayPal\IZettle\Run\Task\ImageTask"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
