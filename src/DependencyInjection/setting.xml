<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Swag\PayPal\Setting\SwagPayPalSettingGeneralDefinition">
            <tag name="shopware.entity.definition" entity="swag_paypal_setting_general"/>
        </service>

        <service id="Swag\PayPal\Controller\SettingsController" public="true">
            <argument type="service" id="Swag\PayPal\Setting\Service\ApiCredentialTestService"/>
        </service>

        <service id="Swag\PayPal\Setting\Service\ApiCredentialTestService">
            <argument type="service" id="Swag\PayPal\PayPal\Resource\TokenResource"/>
        </service>

        <service id="Swag\PayPal\Setting\Service\SettingsService">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>
            <argument type="service" id="Swag\PayPal\Setting\SwagPayPalSettingGeneralDefinition"/>
        </service>
    </services>
</container>
