<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SwagPayPal\Core\Checkout\Payment\Cart\PaymentHandler\PayPalPayment">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <argument type="service" id="SwagPayPal\PayPal\Resource\PaymentResource"/>
            <argument type="service" id="SwagPayPal\Payment\PaymentBuilderService"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <tag name="payment.method"/>
        </service>

        <service id="SwagPayPal\Controller\PayPalPaymentController" public="true">
            <argument type="service" id="SwagPayPal\PayPal\Resource\PaymentResource"/>
            <argument type="service" id="SwagPayPal\PayPal\Resource\SaleResource"/>
            <argument type="service" id="SwagPayPal\PayPal\Resource\AuthorizationResource"/>
            <argument type="service" id="SwagPayPal\PayPal\Resource\OrdersResource"/>
        </service>

        <service id="SwagPayPal\Payment\PaymentBuilderService">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <argument type="service" id="SwagPayPal\Setting\Service\SettingsService"/>
        </service>
    </services>
</container>
