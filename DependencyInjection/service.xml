<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SwagPayPal\Core\Checkout\Payment\Cart\PaymentHandler\PayPalPayment"
                 class="SwagPayPal\Core\Checkout\Payment\Cart\PaymentHandler\PayPalPayment">
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="SwagPayPal\PayPal\Resource\PaymentResource"/>
            <argument type="service" id="SwagPayPal\Service\PaymentBuilderService"/>
            <tag name="payment.method"/>
        </service>

        <service id="SwagPayPal\Service\PaymentBuilderService"
                 class="SwagPayPal\Service\PaymentBuilderService">
            <argument type="service" id="language.repository"/>
            <argument type="service" id="sales_channel.repository"/>
        </service>

        <service id="SwagPayPal\Service\WebhookService"
                 class="SwagPayPal\Service\WebhookService">
            <argument type="service" id="SwagPayPal\PayPal\Resource\WebhookResource"/>
            <argument type="service" id="swag_paypal_setting_general.repository"/>
            <argument type="service" id="router.default"/>
            <argument type="service" id="SwagPayPal\Webhook\WebhookRegistry"/>
        </service>

        <service id="SwagPayPal\Service\ApiCredentialTestService"
                class="SwagPayPal\Service\ApiCredentialTestService">
            <argument id="SwagPayPal\PayPal\Resource\TokenResource" type="service"/>
        </service>
    </services>
</container>
