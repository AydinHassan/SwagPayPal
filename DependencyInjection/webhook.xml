<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SwagPayPal\Controller\WebhookController" public="true">
            <argument type="service" id="logger"/>
            <argument type="service" id="SwagPayPal\Webhook\WebhookService"/>
            <argument type="service" id="SwagPayPal\Setting\Service\SettingsService"/>
        </service>

        <service id="SwagPayPal\Webhook\WebhookService">
            <argument type="service" id="SwagPayPal\PayPal\Resource\WebhookResource"/>
            <argument type="service" id="SwagPayPal\Webhook\WebhookRegistry"/>
            <argument type="service" id="SwagPayPal\Setting\Service\SettingsService"/>
            <argument type="service" id="router.default"/>
        </service>

        <!-- handler registry -->
        <service id="SwagPayPal\Webhook\WebhookRegistry">
            <argument type="tagged" tag="swag.paypal.webhook.handler"/>
        </service>

        <!-- handler -->
        <service id="SwagPayPal\Webhook\Handler\AuthorizationVoided">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <tag name="swag.paypal.webhook.handler"/>
        </service>

        <service id="SwagPayPal\Webhook\Handler\SaleComplete">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <tag name="swag.paypal.webhook.handler"/>
        </service>

        <service id="SwagPayPal\Webhook\Handler\SaleDenied">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <tag name="swag.paypal.webhook.handler"/>
        </service>

        <service id="SwagPayPal\Webhook\Handler\SaleRefunded">
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionRegistry"/>
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
            <tag name="swag.paypal.webhook.handler"/>
        </service>
    </services>
</container>
