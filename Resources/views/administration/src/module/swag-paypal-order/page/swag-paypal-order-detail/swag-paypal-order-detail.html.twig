{% block swag_paypal_order_detail %}
    <sw-page>
        <template slot="content">
            <sw-card-view>
                {% block swag_paypal_order_detail_tabs %}
                    <sw-tabs>
                        <sw-tabs-item :route="{ name: 'sw.order.detail', params: { id: $route.params.id } }"
                                      :title="$tc('swag-paypal.tabs.overview')">
                            {{ $tc('swag-paypal.tabs.overview') }}
                        </sw-tabs-item>

                        <sw-tabs-item :route="{ name: 'swag.paypal.order.detail', params: { id: $route.params.id } }"
                                      :title="$tc('swag-paypal.header')">
                            {{ $tc('swag-paypal.header') }}
                        </sw-tabs-item>
                    </sw-tabs>
                {% endblock %}
                <template v-if="!isLoading">
                    {% block swag_paypal_order_detail_card %}
                        <sw-card :title="$tc('swag-paypal.orderDetails.cardTitle')">
                            <sw-container columns="1fr"
                                          gap="0px 30px">
                                    {% block swag_paypal_order_detail_invoice %}
                                        {% block swag_paypal_order_detail_invoice_heading %}
                                                <h3>
                                                    {{ $tc('swag-paypal.orderDetails.invoice.heading') }}
                                                </h3>
                                        {% endblock %}
                                        {% block swag_paypal_order_detail_invoice_list %}
                                            <sw-description-list class="swag-paypal-order-detail__data">
                                                <dt>{{ $tc('swag-paypal.orderDetails.invoice.totalAmount') }}</dt>
                                                <dd>{{ amount.total }} {{ currency }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.invoice.subTotal') }}</dt>
                                                <dd> {{ amount.details.subtotal }} {{ currency }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.invoice.shipping') }}</dt>
                                                <dd> {{ amount.details.shipping }} {{ currency }}</dd>
                                            </sw-description-list>
                                        {% endblock %}
                                    {% endblock %}

                                    {% block swag_paypal_order_detail_payment %}
                                        {% block swag_paypal_order_detail_payment_heading %}
                                            <h3 class="swag-paypal-order-detail__heading">
                                                {{ $tc('swag-paypal.orderDetails.payment.heading') }}
                                            </h3>
                                        {% endblock %}
                                        {% block swag_paypal_order_detail_payment_list %}
                                            <sw-description-list class="swag-paypal-order-detail__data">
                                                <dt>{{ $tc('swag-paypal.orderDetails.payment.intent') }}</dt>
                                                <dd>{{ $tc(`swag-paypal.settingForm.behaviour.intent.${paymentResource.intent}`) }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.payment.paymentId') }}</dt>
                                                <dd>{{ paymentResource.id }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.payment.cartId') }}</dt>
                                                <dd>{{ paymentResource.cart }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.payment.state') }}</dt>
                                                <dd>{{ paymentResource.state }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.payment.createTime') }}</dt>
                                                <dd>{{ createDateTime }}</dd>

                                                <dt>{{ $tc('swag-paypal.orderDetails.payment.updateTime') }}</dt>
                                                <dd>{{ updateDateTime }}</dd>
                                            </sw-description-list>
                                        {% endblock %}
                                    {% endblock %}

                                    {% block swag_paypal_order_detail_customer %}
                                        {% block swag_paypal_order_detail_customer_heading %}
                                            <h3 class="swag-paypal-order-detail__heading">
                                                {{ $tc('swag-paypal.orderDetails.customer.heading') }}
                                            </h3>
                                        {% endblock %}
                                        {% block swag_paypal_order_detail_customer_list %}
                                            <sw-description-list class="swag-paypal-order-detail__data">
                                                <dt>{{ $tc('swag-paypal.orderDetails.customer.payerId') }}</dt>
                                                <dd>{{ paymentResource.payer.payer_info.payer_id }}</dd>
                                            </sw-description-list>
                                        {% endblock %}
                                    {% endblock %}
                            </sw-container>
                        </sw-card>
                    {% endblock %}

                    {% block swag_paypal_order_transaction_history_card %}
                        <sw-card :title="$tc('swag-paypal.transactionHistory.cardTitle')">
                            {% block swag_paypal_order_transaction_history_grid %}
                                <sw-data-grid :dataSource="relatedResources"
                                              :columns="relatedResourceColumns"
                                              :showActions="false"
                                              :showSelection="false">
                                </sw-data-grid>
                            {% endblock %}
                        </sw-card>
                    {% endblock %}
                </template>

                <sw-loader v-if="isLoading" class="swag-paypal-order__loading-indicator">
                </sw-loader>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}